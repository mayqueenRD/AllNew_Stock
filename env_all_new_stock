#!/bin/bash

get_price_one(){
    ./get_pricestock "$@"
}

get_price_all(){
    ./get_allpricestock
}

get_fucker_one(){
    ./get_onestock "$@"
}

get_fucker_all(){
    ./get_allstock waitsu
    sync
    ./get_allstock toshin
    sync
    ./get_allstock tsuyinshan
    sync
}

get_yahoo_one(){
    ./get_yahoodata "$@"
}

get_yahoo_all(){
    cat codelist | while read codeline; do
        ./get_yahoodata income $codeline
        ./get_yahoodata bonus $codeline
    done
}

update_all_manual_date(){
    ./get_onestock waitsu "$@"
    ./get_onestock toshin "$@"
    ./get_onestock tsuyinshan "$@"

    cat codelist | while read codeline; do
        ./get_pricestock "$@" $codeline
        ./get_pricestock "$@" $codeline
    done
}

